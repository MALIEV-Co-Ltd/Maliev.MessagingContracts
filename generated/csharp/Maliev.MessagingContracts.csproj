<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>Maliev.MessagingContracts</PackageId>
    <Authors>Maliev</Authors>
    <Company>Maliev</Company>
    <Description>Shared messaging contracts for the MALIEV ecosystem.</Description>
    <RepositoryUrl>https://github.com/MALIEV-Co-Ltd/Maliev.MessagingContracts</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Contracts/**/*.cs" />
  </ItemGroup>

</Project>