{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "maliev/employee-events",
    "title": "Employee Domain Events",
    "description": "Events published by the Employee Service for cross-service integration",
    "definitions": {
        "EmployeeCreatedEvent": {
            "type": "object",
            "description": "Published when a new employee record is created",
            "properties": {
                "employeeId": {
                    "type": "string",
                    "format": "uuid"
                },
                "employeeNumber": {
                    "type": "string"
                },
                "principalId": {
                    "type": "string",
                    "format": "uuid"
                },
                "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Work email address of the employee"
                },
                "fullName": {
                    "type": "string",
                    "description": "Full display name of the employee"
                },
                "startDate": {
                    "type": "string",
                    "format": "date-time"
                },
                "departmentId": {
                    "type": "string",
                    "format": "uuid"
                },
                "positionId": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "uuid"
                },
                "managerId": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "uuid"
                }
            },
            "required": [
                "employeeId",
                "employeeNumber",
                "principalId",
                "startDate",
                "departmentId"
            ]
        },
        "EmployeeTerminatedEvent": {
            "type": "object",
            "description": "Published when an employee is terminated",
            "properties": {
                "employeeId": {
                    "type": "string",
                    "format": "uuid"
                },
                "terminationDate": {
                    "type": "string",
                    "format": "date-time"
                },
                "terminationReason": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "eligibleForRehire": {
                    "type": "boolean"
                }
            },
            "required": [
                "employeeId",
                "terminationDate"
            ]
        },
        "DepartmentTransferredEvent": {
            "type": "object",
            "description": "Published when an employee transfers between departments",
            "properties": {
                "employeeId": {
                    "type": "string",
                    "format": "uuid"
                },
                "previousDepartmentId": {
                    "type": "string",
                    "format": "uuid"
                },
                "newDepartmentId": {
                    "type": "string",
                    "format": "uuid"
                },
                "effectiveDate": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "required": [
                "employeeId",
                "previousDepartmentId",
                "newDepartmentId",
                "effectiveDate"
            ]
        },
        "EmployeeDepartmentTransferredEvent": {
            "type": "object",
            "description": "Published when an employee transfers between departments",
            "properties": {
                "employeeId": {
                    "type": "string",
                    "format": "uuid"
                },
                "previousDepartmentId": {
                    "type": "string",
                    "format": "uuid"
                },
                "newDepartmentId": {
                    "type": "string",
                    "format": "uuid"
                },
                "effectiveDate": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "required": [
                "employeeId",
                "previousDepartmentId",
                "newDepartmentId",
                "effectiveDate"
            ]
        },
        "TeamCreatedEvent": {
            "type": "object",
            "description": "Published when a new team is created",
            "properties": {
                "teamId": {
                    "type": "string",
                    "format": "uuid"
                },
                "teamName": {
                    "type": "string"
                },
                "teamType": {
                    "type": "string"
                },
                "description": {
                    "type": ["string", "null"]
                },
                "teamLeadId": {
                    "type": ["string", "null"],
                    "format": "uuid"
                },
                "isActive": {
                    "type": "boolean"
                },
                "createdAt": {
                    "type": "string",
                    "format": "date-time"
                },
                "createdBy": {
                    "type": "string",
                    "format": "uuid"
                }
            },
            "required": ["teamId", "teamName", "teamType", "isActive", "createdAt", "createdBy"]
        },
        "TeamUpdatedEvent": {
            "type": "object",
            "description": "Published when a team is updated",
            "properties": {
                "teamId": {
                    "type": "string",
                    "format": "uuid"
                },
                "teamName": {
                    "type": "string"
                },
                "teamType": {
                    "type": "string"
                },
                "description": {
                    "type": ["string", "null"]
                },
                "teamLeadId": {
                    "type": ["string", "null"],
                    "format": "uuid"
                },
                "isActive": {
                    "type": "boolean"
                },
                "updatedAt": {
                    "type": "string",
                    "format": "date-time"
                },
                "updatedBy": {
                    "type": "string",
                    "format": "uuid"
                }
            },
            "required": ["teamId", "teamName", "teamType", "isActive", "updatedAt", "updatedBy"]
        },
        "TeamMemberAddedEvent": {
            "type": "object",
            "description": "Published when a member is added to a team",
            "properties": {
                "teamId": {
                    "type": "string",
                    "format": "uuid"
                },
                "teamName": {
                    "type": "string"
                },
                "employeeId": {
                    "type": "string",
                    "format": "uuid"
                },
                "employeeNumber": {
                    "type": "string"
                },
                "employeeName": {
                    "type": "string"
                },
                "isPrimary": {
                    "type": "boolean"
                },
                "addedAt": {
                    "type": "string",
                    "format": "date-time"
                },
                "addedBy": {
                    "type": "string",
                    "format": "uuid"
                }
            },
            "required": ["teamId", "teamName", "employeeId", "employeeNumber", "employeeName", "isPrimary", "addedAt", "addedBy"]
        },
        "TeamMemberRemovedEvent": {
            "type": "object",
            "description": "Published when a member is removed from a team",
            "properties": {
                "teamId": {
                    "type": "string",
                    "format": "uuid"
                },
                "teamName": {
                    "type": "string"
                },
                "employeeId": {
                    "type": "string",
                    "format": "uuid"
                },
                "employeeNumber": {
                    "type": "string"
                },
                "employeeName": {
                    "type": "string"
                },
                "removedAt": {
                    "type": "string",
                    "format": "date-time"
                },
                "removedBy": {
                    "type": "string",
                    "format": "uuid"
                }
            },
            "required": ["teamId", "teamName", "employeeId", "employeeNumber", "employeeName", "removedAt", "removedBy"]
        }
    }
}
