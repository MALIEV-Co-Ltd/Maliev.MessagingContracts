{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Invoice Generated Event",
    "description": "Event published when invoice PDF document is generated.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "invoiceId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the invoice"
                },
                "invoiceNumber": {
                    "type": "string",
                    "description": "Sequential invoice number"
                },
                "pdfUrl": {
                    "type": "string",
                    "description": "URL to the generated PDF document"
                },
                "generatedAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "PDF generation timestamp"
                }
            },
            "required": [
                "invoiceId",
                "invoiceNumber",
                "pdfUrl",
                "generatedAt"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
