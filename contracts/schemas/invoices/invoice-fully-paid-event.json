{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Invoice Fully Paid Event",
    "description": "Event published when an invoice is fully paid (outstanding balance reaches zero).",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "invoiceId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the invoice"
                },
                "invoiceNumber": {
                    "type": "string",
                    "description": "Sequential invoice number"
                },
                "customerId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Customer ID"
                },
                "totalAmount": {
                    "type": "number",
                    "description": "Total invoice amount"
                },
                "currency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$",
                    "description": "Currency code (ISO 4217)"
                },
                "lastPaymentId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "ID of the payment that brought balance to zero"
                },
                "fullyPaidAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp when invoice became fully paid"
                }
            },
            "required": [
                "invoiceId",
                "invoiceNumber",
                "customerId",
                "totalAmount",
                "currency",
                "lastPaymentId",
                "fullyPaidAt"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
