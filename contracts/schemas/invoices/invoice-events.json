{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "maliev/invoice-events",
    "title": "Invoice Domain Events",
    "description": "Events published by the Invoice Service for cross-service integration",
    "definitions": {
        "InvoiceCreatedEvent": {
            "type": "object",
            "description": "Published when a new invoice is created",
            "properties": {
                "invoiceId": {
                    "type": "string",
                    "format": "uuid"
                },
                "invoiceNumber": {
                    "type": "string"
                },
                "orderId": {
                    "type": "string",
                    "format": "uuid"
                },
                "customerId": {
                    "type": "string",
                    "format": "uuid"
                },
                "totalAmount": {
                    "type": "number"
                },
                "currency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$"
                },
                "dueDate": {
                    "type": "string",
                    "format": "date-time"
                },
                "createdAt": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "required": ["invoiceId", "invoiceNumber", "orderId", "customerId", "totalAmount", "currency", "dueDate", "createdAt"]
        },
        "InvoiceGeneratedEvent": {
            "type": "object",
            "description": "Published when invoice PDF is successfully generated",
            "properties": {
                "invoiceId": {
                    "type": "string",
                    "format": "uuid"
                },
                "invoiceNumber": {
                    "type": "string"
                },
                "pdfUrl": {
                    "type": "string",
                    "format": "uri"
                },
                "generatedAt": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "required": ["invoiceId", "invoiceNumber", "pdfUrl", "generatedAt"]
        },
        "InvoiceSentEvent": {
            "type": "object",
            "description": "Published when invoice is sent to customer",
            "properties": {
                "invoiceId": {
                    "type": "string",
                    "format": "uuid"
                },
                "invoiceNumber": {
                    "type": "string"
                },
                "customerId": {
                    "type": "string",
                    "format": "uuid"
                },
                "sentTo": {
                    "type": "string",
                    "format": "email"
                },
                "sentAt": {
                    "type": "string",
                    "format": "date-time"
                },
                "sentBy": {
                    "type": "string",
                    "format": "uuid"
                }
            },
            "required": ["invoiceId", "invoiceNumber", "customerId", "sentTo", "sentAt", "sentBy"]
        },
        "InvoicePaymentReceivedEvent": {
            "type": "object",
            "description": "Published when payment is received for invoice",
            "properties": {
                "invoiceId": {
                    "type": "string",
                    "format": "uuid"
                },
                "invoiceNumber": {
                    "type": "string"
                },
                "paymentId": {
                    "type": "string",
                    "format": "uuid"
                },
                "paidAmount": {
                    "type": "number"
                },
                "currency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$"
                },
                "paidAt": {
                    "type": "string",
                    "format": "date-time"
                },
                "remainingBalance": {
                    "type": "number"
                }
            },
            "required": ["invoiceId", "invoiceNumber", "paymentId", "paidAmount", "currency", "paidAt", "remainingBalance"]
        },
        "InvoiceOverdueEvent": {
            "type": "object",
            "description": "Published when invoice becomes overdue (background job)",
            "properties": {
                "invoiceId": {
                    "type": "string",
                    "format": "uuid"
                },
                "invoiceNumber": {
                    "type": "string"
                },
                "customerId": {
                    "type": "string",
                    "format": "uuid"
                },
                "dueDate": {
                    "type": "string",
                    "format": "date-time"
                },
                "daysOverdue": {
                    "type": "integer"
                },
                "outstandingAmount": {
                    "type": "number"
                },
                "currency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$"
                }
            },
            "required": ["invoiceId", "invoiceNumber", "customerId", "dueDate", "daysOverdue", "outstandingAmount", "currency"]
        },
        "InvoiceCancelledEvent": {
            "type": "object",
            "description": "Published when invoice is cancelled or voided",
            "properties": {
                "invoiceId": {
                    "type": "string",
                    "format": "uuid"
                },
                "invoiceNumber": {
                    "type": "string"
                },
                "cancelledBy": {
                    "type": "string",
                    "format": "uuid"
                },
                "cancelledAt": {
                    "type": "string",
                    "format": "date-time"
                },
                "cancellationReason": {
                    "type": "string"
                }
            },
            "required": ["invoiceId", "invoiceNumber", "cancelledBy", "cancelledAt", "cancellationReason"]
        },
        "InvoiceFullyPaidEvent": {
            "type": "object",
            "description": "Published when invoice is fully paid (remainingBalance = 0)",
            "properties": {
                "invoiceId": {
                    "type": "string",
                    "format": "uuid"
                },
                "invoiceNumber": {
                    "type": "string"
                },
                "totalAmount": {
                    "type": "number"
                },
                "currency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$"
                },
                "fullyPaidAt": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "required": ["invoiceId", "invoiceNumber", "totalAmount", "currency", "fullyPaidAt"]
        }
    }
}
