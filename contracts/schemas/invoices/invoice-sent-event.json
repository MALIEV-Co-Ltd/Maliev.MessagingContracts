{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Invoice Sent Event",
    "description": "Event published when invoice is sent to customer.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "invoiceId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the invoice"
                },
                "invoiceNumber": {
                    "type": "string",
                    "description": "Sequential invoice number"
                },
                "customerId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Customer ID"
                },
                "recipientEmail": {
                    "type": "string",
                    "description": "Email address where invoice was sent"
                },
                "sentAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp when invoice was sent"
                },
                "sentBy": {
                    "type": "string",
                    "format": "uuid",
                    "description": "User who sent the invoice"
                }
            },
            "required": [
                "invoiceId",
                "invoiceNumber",
                "customerId",
                "recipientEmail",
                "sentAt",
                "sentBy"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
