{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Invoice Cancelled Event",
    "description": "Event published when an invoice is cancelled or voided.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "invoiceId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the invoice"
                },
                "invoiceNumber": {
                    "type": "string",
                    "description": "Sequential invoice number"
                },
                "customerId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Customer ID"
                },
                "cancelledBy": {
                    "type": "string",
                    "format": "uuid",
                    "description": "User who cancelled the invoice"
                },
                "cancelledAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Cancellation timestamp"
                },
                "cancellationReason": {
                    "type": ["string", "null"],
                    "description": "Reason for cancellation"
                },
                "refundRequired": {
                    "type": "boolean",
                    "description": "Whether a refund is required for payments already made"
                }
            },
            "required": [
                "invoiceId",
                "invoiceNumber",
                "customerId",
                "cancelledBy",
                "cancelledAt",
                "refundRequired"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
