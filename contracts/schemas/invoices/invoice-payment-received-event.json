{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Invoice Payment Received Event",
    "description": "Event published when a payment is allocated to an invoice.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "invoiceId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the invoice"
                },
                "invoiceNumber": {
                    "type": "string",
                    "description": "Sequential invoice number"
                },
                "paymentId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Payment ID"
                },
                "allocatedAmount": {
                    "type": "number",
                    "description": "Amount allocated from payment"
                },
                "currency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$",
                    "description": "Currency code (ISO 4217)"
                },
                "remainingBalance": {
                    "type": "number",
                    "description": "Outstanding balance after this payment"
                },
                "allocatedAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Payment allocation timestamp"
                },
                "allocatedBy": {
                    "type": "string",
                    "format": "uuid",
                    "description": "User who allocated the payment"
                }
            },
            "required": [
                "invoiceId",
                "invoiceNumber",
                "paymentId",
                "allocatedAmount",
                "currency",
                "remainingBalance",
                "allocatedAt",
                "allocatedBy"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
