{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "maliev/compliance-events",
    "title": "Compliance Domain Events",
    "description": "Events published by the Compliance Service for cross-service integration",
    "definitions": {
        "WorkAuthorizationExpiringEvent": {
            "type": "object",
            "description": "Published when authorization is expiring (30/60/90 days)",
            "properties": {
                "authorizationId": {
                    "type": "string",
                    "format": "uuid"
                },
                "employeeId": {
                    "type": "string",
                    "format": "uuid"
                },
                "authorizationType": {
                    "type": "string",
                    "enum": [
                        "Citizen",
                        "PermanentResident",
                        "WorkVisa",
                        "StudentVisa",
                        "TemporaryWorker",
                        "Refugee",
                        "Asylee",
                        "Other"
                    ]
                },
                "expirationDate": {
                    "type": "string",
                    "format": "date-time"
                },
                "daysUntilExpiration": {
                    "type": "integer"
                }
            },
            "required": [
                "authorizationId",
                "employeeId",
                "authorizationType",
                "expirationDate",
                "daysUntilExpiration"
            ]
        },
        "WorkAuthorizationExpiredEvent": {
            "type": "object",
            "description": "Published when authorization has expired",
            "properties": {
                "authorizationId": {
                    "type": "string",
                    "format": "uuid"
                },
                "employeeId": {
                    "type": "string",
                    "format": "uuid"
                },
                "authorizationType": {
                    "type": "string"
                },
                "expirationDate": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "required": [
                "authorizationId",
                "employeeId",
                "authorizationType",
                "expirationDate"
            ]
        }
    }
}