{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Payment Completed Event",
    "description": "Event indicating that a payment has been successfully processed.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "orderId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the order"
                },
                "orderNumber": {
                    "type": "string",
                    "description": "Human-readable order number"
                },
                "paymentId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the payment"
                },
                "amount": {
                    "type": "number",
                    "description": "Amount paid"
                },
                "currency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$",
                    "description": "Currency code (ISO 4217)"
                }
            },
            "required": [
                "orderId",
                "orderNumber",
                "paymentId",
                "amount",
                "currency"
            ]
        }
    },
    "required": [
        "payload"
    ]
}