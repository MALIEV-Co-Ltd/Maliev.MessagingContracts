{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Order On Hold Event",
    "description": "Event published when an order is put on hold.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "orderId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the order"
                },
                "orderNumber": {
                    "type": "string",
                    "description": "Human-readable order number"
                },
                "putOnHoldBy": {
                    "type": "string",
                    "format": "uuid",
                    "description": "User who put the order on hold"
                },
                "putOnHoldAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp when order was put on hold"
                },
                "holdReason": {
                    "type": "string",
                    "description": "Reason for putting order on hold"
                }
            },
            "required": [
                "orderId",
                "orderNumber",
                "putOnHoldBy",
                "putOnHoldAt",
                "holdReason"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
