{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Order Reopened Event",
    "description": "Event published when a completed or cancelled order is reopened.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "orderId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the order"
                },
                "orderNumber": {
                    "type": "string",
                    "description": "Human-readable order number"
                },
                "reopenedBy": {
                    "type": "string",
                    "format": "uuid",
                    "description": "User who reopened the order"
                },
                "reopenedAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp when order was reopened"
                },
                "reopenReason": {
                    "type": "string",
                    "description": "Reason for reopening the order"
                }
            },
            "required": [
                "orderId",
                "orderNumber",
                "reopenedBy",
                "reopenedAt",
                "reopenReason"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
