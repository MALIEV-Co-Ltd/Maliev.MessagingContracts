{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Order In Progress Event",
    "description": "Event published when work on an order begins.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "orderId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the order"
                },
                "orderNumber": {
                    "type": "string",
                    "description": "Human-readable order number"
                },
                "startedAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp when work started"
                },
                "estimatedCompletionDate": {
                    "type": ["string", "null"],
                    "format": "date-time",
                    "description": "Estimated completion date (optional)"
                }
            },
            "required": [
                "orderId",
                "orderNumber",
                "startedAt"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
