{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Order Created Event",
    "description": "Event published when a new order is created.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "orderId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the order (converted from string OrderId)"
                },
                "orderNumber": {
                    "type": "string",
                    "description": "Human-readable order number (e.g., ORD-2024-00001)"
                },
                "customerId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the customer"
                },
                "totalAmount": {
                    "type": "number",
                    "description": "Total amount of the order"
                },
                "currency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$",
                    "description": "Currency code (ISO 4217)"
                },
                "createdAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp when the order was created"
                },
                "assignedEmployeeId": {
                    "type": ["string", "null"],
                    "format": "uuid",
                    "description": "Assigned employee ID (optional)"
                }
            },
            "required": [
                "orderId",
                "orderNumber",
                "customerId",
                "totalAmount",
                "currency",
                "createdAt"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
