{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Order Accepted Event",
    "description": "Event published when a customer accepts an order quote.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "orderId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the order"
                },
                "orderNumber": {
                    "type": "string",
                    "description": "Human-readable order number"
                },
                "customerId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the customer"
                },
                "acceptedAmount": {
                    "type": "number",
                    "description": "Accepted order amount"
                },
                "currency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$",
                    "description": "Currency code (ISO 4217)"
                },
                "acceptedAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp when order was accepted"
                }
            },
            "required": [
                "orderId",
                "orderNumber",
                "customerId",
                "acceptedAmount",
                "currency",
                "acceptedAt"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
