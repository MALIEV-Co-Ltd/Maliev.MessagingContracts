{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Order Cancelled Event",
    "description": "Event published when an order is cancelled.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "orderId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the order"
                },
                "orderNumber": {
                    "type": "string",
                    "description": "Human-readable order number"
                },
                "cancelledBy": {
                    "type": "string",
                    "format": "uuid",
                    "description": "User who cancelled the order"
                },
                "cancelledAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp when order was cancelled"
                },
                "cancellationReason": {
                    "type": "string",
                    "description": "Reason for cancellation"
                },
                "refundRequired": {
                    "type": "boolean",
                    "description": "Whether a refund is required"
                }
            },
            "required": [
                "orderId",
                "orderNumber",
                "cancelledBy",
                "cancelledAt",
                "cancellationReason",
                "refundRequired"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
