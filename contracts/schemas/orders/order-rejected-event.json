{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Order Rejected Event",
    "description": "Event published when an order is rejected.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "orderId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the order"
                },
                "orderNumber": {
                    "type": "string",
                    "description": "Human-readable order number"
                },
                "rejectedBy": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Employee who rejected the order"
                },
                "rejectedAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp when order was rejected"
                },
                "rejectionReason": {
                    "type": "string",
                    "description": "Reason for rejection"
                }
            },
            "required": [
                "orderId",
                "orderNumber",
                "rejectedBy",
                "rejectedAt",
                "rejectionReason"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
