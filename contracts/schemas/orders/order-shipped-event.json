{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Order Shipped Event",
    "description": "Event published when an order is shipped to the customer.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "orderId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the order"
                },
                "orderNumber": {
                    "type": "string",
                    "description": "Human-readable order number"
                },
                "shippedAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp when order was shipped"
                },
                "trackingNumber": {
                    "type": ["string", "null"],
                    "description": "Shipping tracking number (optional)"
                },
                "carrier": {
                    "type": ["string", "null"],
                    "description": "Shipping carrier name (optional)"
                },
                "estimatedDeliveryDate": {
                    "type": ["string", "null"],
                    "format": "date-time",
                    "description": "Estimated delivery date (optional)"
                }
            },
            "required": [
                "orderId",
                "orderNumber",
                "shippedAt"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
