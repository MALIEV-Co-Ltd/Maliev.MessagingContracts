{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Order Status Changed Event",
    "description": "Generic event published whenever an order status changes.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "orderId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the order"
                },
                "orderNumber": {
                    "type": "string",
                    "description": "Human-readable order number"
                },
                "previousStatus": {
                    "type": "string",
                    "description": "Previous order status"
                },
                "newStatus": {
                    "type": "string",
                    "description": "New order status"
                },
                "changedBy": {
                    "type": "string",
                    "format": "uuid",
                    "description": "User who changed the status"
                },
                "changedAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp of status change"
                },
                "reason": {
                    "type": ["string", "null"],
                    "description": "Optional reason for status change"
                }
            },
            "required": [
                "orderId",
                "orderNumber",
                "previousStatus",
                "newStatus",
                "changedBy",
                "changedAt"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
