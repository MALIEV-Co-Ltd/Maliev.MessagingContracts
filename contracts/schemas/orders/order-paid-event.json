{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Order Paid Event",
    "description": "Event published when payment for an order is completed.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "orderId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the order"
                },
                "orderNumber": {
                    "type": "string",
                    "description": "Human-readable order number"
                },
                "paymentId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the payment"
                },
                "paidAmount": {
                    "type": "number",
                    "description": "Amount paid"
                },
                "currency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$",
                    "description": "Currency code (ISO 4217)"
                },
                "paidAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp when payment was completed"
                }
            },
            "required": [
                "orderId",
                "orderNumber",
                "paymentId",
                "paidAmount",
                "currency",
                "paidAt"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
