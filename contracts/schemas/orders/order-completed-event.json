{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Order Completed Event",
    "description": "Event published when an order is finished/completed.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "orderId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the order"
                },
                "orderNumber": {
                    "type": "string",
                    "description": "Human-readable order number"
                },
                "completedAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp when order was completed"
                },
                "completedBy": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Employee who completed the order"
                }
            },
            "required": [
                "orderId",
                "orderNumber",
                "completedAt",
                "completedBy"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
