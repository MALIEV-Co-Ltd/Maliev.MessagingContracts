{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Order Quoted Event",
    "description": "Event published when an order receives a quote.",
    "allOf": [
        {
            "$ref": "../shared/base-message.json"
        }
    ],
    "type": "object",
    "properties": {
        "payload": {
            "type": "object",
            "properties": {
                "orderId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the order"
                },
                "orderNumber": {
                    "type": "string",
                    "description": "Human-readable order number"
                },
                "quotedAmount": {
                    "type": "number",
                    "description": "Quoted amount for the order"
                },
                "currency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$",
                    "description": "Currency code (ISO 4217)"
                },
                "validUntil": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Quote expiration date"
                },
                "quotedBy": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Employee who created the quote"
                },
                "quotedAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp when quote was created"
                }
            },
            "required": [
                "orderId",
                "orderNumber",
                "quotedAmount",
                "currency",
                "validUntil",
                "quotedBy",
                "quotedAt"
            ]
        }
    },
    "required": [
        "payload"
    ]
}
